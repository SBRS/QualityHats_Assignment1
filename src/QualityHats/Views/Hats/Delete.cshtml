@model QualityHats.Models.Hat

@{
    ViewData["Title"] = "Delete The Hat";
}

<h2 class="title">Delete</h2>
<p class="text-danger"> @TempData["HatUsed"] </p>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3 class="title">Are you sure you want to delete this hat?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd>
            <img style="width: 250px; height: auto;" src="@Href("~" + Model.ImagePath)" alt="Hat Image" onerror="this.onerror = null; this.src = '@Href("~/images/Error.jpg")'">
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.HatName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HatName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd>
            @Html.DisplayFor(modelItem => Model.Category.CategoryName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd>
            @Html.DisplayFor(modelItem => Model.Supplier.SupplierName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
